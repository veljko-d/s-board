{% extends 'layouts/app.twig' %}

{% block title %}
    Register
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/css/auth.css" type="text/css">
    <link rel="stylesheet" href="/css/error.css" type="text/css">
{% endblock %}

{% block content %}
    <div class="col-4 col-s-3"></div>

    <div class="col-4 col-s-6">
        <!-- FORM ELEMENT -->
        <div id="form-container">
            <div id="form-head">
                <h1><i class="fas fa-user-plus"></i> Register</h1>

                <hr>

                {% include 'layouts/errors.twig' %}
            </div>

            <form method="POST" action="/register">
                <div class="form-group">
                    <label for="name"><i class='fas fa-user'></i> Name</label>
                    <input id="name" type="text" name="name" autofocus> <!-- dodaj required -->
                </div>

                <div class="form-group">
                    <label for="email"><i class="fas fa-envelope"></i> E-Mail Address</label>
                    <input id="email" type="email" name="email"> <!-- dodaj required -->
                </div>

                <div class="form-group">
                    <label for="password"><i class="fas fa-key"></i> Password</label>
                    <input id="password" type="password" name="password"> <!-- dodaj required -->
                </div>

                <div class="form-group">
                    <label for="password-confirm"><i class="fas fa-key"></i> Confirm Password</label>
                    <input id="password-confirm" type="password" name="password_confirmation"> <!-- dodaj required -->
                </div>

                <input type="submit" value="Register">
            </form>

            <p id="already">Already have an account?
                <a href="/login">Login.</a>
            </p>
        </div>
    </div>

    <div class="col-4 col-s-3"></div>
{% endblock %}

{% block js %}

{% endblock %}
